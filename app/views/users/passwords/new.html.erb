<div class="col-lg-6">		
	<div class="well">
		<h2>Forgot your password?</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
		  
		  <fieldset>

		  	<%= f.input :email, wrapper: 'sign_in', input_html: { class: 'form-control'}, label_html: {class: 'col-lg-3 control-label'} %>
			  <div class="form-group">
			  	<div class="col-lg-10 col-lg-offset-3">
			  		<%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %>
			  	</div>
				</div>

			</fieldset>
		<% end %>

		<%= render "users/shared/links" %>
	</div>
</div>
