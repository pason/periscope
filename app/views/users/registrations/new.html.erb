<div class="col-lg-6">	
	<div class="well">

	<h2>Sign up</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal'} ) do |f| %>
	  
	  <fieldset>

	  	<%= f.input :first_name, wrapper: 'sign_in', input_html: { class: 'form-control'}, label_html: {class: 'col-lg-3 control-label'} %>

	  	<%= f.input :last_name, wrapper: 'sign_in', input_html: { class: 'form-control'}, label_html: {class: 'col-lg-3 control-label'} %>

	  	<%= f.input :email, wrapper: 'sign_in', input_html: { class: 'form-control'}, label_html: {class: 'col-lg-3 control-label'} %>

	  	<%= f.input :password, wrapper: 'sign_in', input_html: { class: 'form-control'}, label_html: {class: 'col-lg-3 control-label'} %>

	  	<%= f.input :password_confirmation, wrapper: 'sign_in', input_html: { class: 'form-control'}, label_html: {class: 'col-lg-3 control-label'} %>
	  	
	  	<div class="form-group">
		  	<div class="col-lg-10 col-lg-offset-3">
		  		<%= f.submit "Sign up", :class => "btn btn-primary" %>
		  	</div>
			</div>

		</fieldset>

	<% end %>

	<%= render "users/shared/links" %>

	</div>

</div>
